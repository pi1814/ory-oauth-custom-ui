extends layout

block styles
  style.
    .consent-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 20px;
      position: relative;
      overflow: hidden;
    }

    .consent-container::before {
      content: '';
      position: absolute;
      width: 600px;
      height: 600px;
      background: rgba(255, 255, 255, 0.08);
      border-radius: 50%;
      top: -250px;
      left: -250px;
      animation: pulse 8s ease-in-out infinite;
    }

    .consent-container::after {
      content: '';
      position: absolute;
      width: 500px;
      height: 500px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 50%;
      bottom: -200px;
      right: -200px;
      animation: pulse 10s ease-in-out infinite reverse;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 0.5; }
      50% { transform: scale(1.1); opacity: 0.8; }
    }

    .consent-card {
      background: white;
      border-radius: 24px;
      box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
      max-width: 560px;
      width: 100%;
      position: relative;
      z-index: 1;
      animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
      overflow: hidden;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .consent-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 40px;
      text-align: center;
      color: white;
    }

    .app-icon {
      width: 80px;
      height: 80px;
      background: white;
      border-radius: 20px;
      margin: 0 auto 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .app-icon svg {
      color: #667eea;
    }

    .consent-title {
      font-size: 28px;
      font-weight: 700;
      margin: 0 0 12px;
    }

    .app-name {
      font-size: 15px;
      font-weight: 600;
      background: rgba(255, 255, 255, 0.2);
      padding: 8px 20px;
      border-radius: 20px;
      display: inline-block;
      margin-top: 12px;
    }

    .consent-description {
      font-size: 15px;
      opacity: 0.95;
      line-height: 1.6;
    }

    .consent-body {
      padding: 40px;
    }

    .section-title {
      font-size: 16px;
      font-weight: 700;
      color: #1a202c;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .section-title svg {
      color: #667eea;
    }

    .permissions-list {
      background: #f8fafc;
      border-radius: 16px;
      padding: 20px;
      margin-bottom: 30px;
    }

    .permission-item {
      display: flex;
      align-items: flex-start;
      padding: 16px;
      background: white;
      border-radius: 12px;
      margin-bottom: 12px;
      transition: all 0.2s ease;
      border: 2px solid transparent;
    }

    .permission-item:last-child {
      margin-bottom: 0;
    }

    .permission-item:hover {
      border-color: #667eea;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    }

    .permission-checkbox {
      width: 22px;
      height: 22px;
      margin: 0;
      cursor: pointer;
      accent-color: #667eea;
      flex-shrink: 0;
    }

    .permission-content {
      flex: 1;
      margin-left: 14px;
    }

    .permission-label {
      font-size: 15px;
      font-weight: 600;
      color: #2d3748;
      cursor: pointer;
      display: block;
      margin-bottom: 4px;
    }

    .permission-description {
      font-size: 13px;
      color: #718096;
      line-height: 1.5;
    }

    .remember-section {
      background: #fef3c7;
      border: 2px solid #fbbf24;
      border-radius: 12px;
      padding: 16px 20px;
      margin-bottom: 30px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .remember-section svg {
      color: #f59e0b;
      flex-shrink: 0;
    }

    .remember-checkbox {
      width: 20px;
      height: 20px;
      margin: 0;
      cursor: pointer;
      accent-color: #f59e0b;
      flex-shrink: 0;
    }

    .remember-label {
      font-size: 14px;
      color: #92400e;
      cursor: pointer;
      font-weight: 500;
      flex: 1;
    }

    .button-group {
      display: flex;
      gap: 12px;
    }

    .btn {
      flex: 1;
      padding: 16px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .btn-allow {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
    }

    .btn-allow:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px rgba(16, 185, 129, 0.5);
    }

    .btn-deny {
      background: #f1f5f9;
      color: #475569;
      border: 2px solid #e2e8f0;
    }

    .btn-deny:hover {
      background: #e2e8f0;
      border-color: #cbd5e0;
      transform: translateY(-2px);
    }

    .btn:active {
      transform: translateY(0);
    }

    .security-notice {
      margin-top: 24px;
      padding: 16px;
      background: #eff6ff;
      border-radius: 12px;
      display: flex;
      align-items: flex-start;
      gap: 12px;
    }

    .security-notice svg {
      color: #3b82f6;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .security-notice-text {
      font-size: 13px;
      color: #1e40af;
      line-height: 1.6;
    }

    @media (max-width: 640px) {
      .consent-header {
        padding: 30px 24px;
      }

      .consent-body {
        padding: 30px 24px;
      }

      .consent-title {
        font-size: 24px;
      }

      .button-group {
        flex-direction: column-reverse;
      }

      .btn {
        width: 100%;
      }
    }

block content
  .consent-container
    .consent-card
      .consent-header
        .app-icon
          svg(width='48', height='48', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2')
            rect(x='3', y='3', width='18', height='18', rx='2', ry='2')
            line(x1='9', y1='3', x2='9', y2='21')
        h1.consent-title Authorization Request
        p.consent-description
          | The application 
          span.app-name= client.client_name || 'Unknown Application'
          |  is requesting access to your account
      
      form.consent-body(method='post', action=action)
        input(type='hidden', name='_csrf', value=csrfToken)
        input(type='hidden', name='challenge', value=challenge)
        
        .section-title
          svg(width='20', height='20', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2')
            path(d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z')
          span Requested Permissions
        
        .permissions-list
          each scope in requested_scope
            .permission-item
              input.permission-checkbox(type='checkbox', name='grant_scope', value=scope, id=`scope-${scope}`, checked)
              .permission-content
                label.permission-label(for=`scope-${scope}`)= scope
                .permission-description
                  if scope === 'openid'
                    | Access your basic profile information
                  else if scope === 'email'
                    | Access your email address
                  else if scope === 'offline_access'
                    | Access your account when you're not present
                  else if scope === 'profile'
                    | Access your full profile details
                  else
                    | Access to #{scope} data
        

        .button-group
          button.btn.btn-deny(type='submit', name='submit', value='Deny access')
            svg(width='20', height='20', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2')
              circle(cx='12', cy='12', r='10')
              line(x1='15', y1='9', x2='9', y2='15')
              line(x1='9', y1='9', x2='15', y2='15')
            span Deny Access
          
          button.btn.btn-allow(type='submit', name='submit', value='Allow access')
            svg(width='20', height='20', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2')
              path(d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z')
            span Allow Access
        
        .security-notice
          svg(width='20', height='20', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2')
            path(d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
          .security-notice-text
            strong Note: 
            | You can revoke this application's access at any time from your account settings.
